# Genral values
NAME		= phonebook

CC			= c++
FLAGS		= -Wall -Wextra -Werror -std=c++98
RM			= rm -rf

OBJDIR		= .obj

# Colors
GREEN		= \033[0;32m
ORANGE		= \033[38;5;208m
RESET		= \033[0m\n

# Files
CPP 		= main
CLASS		= PhoneBook
FILES		= $(CPP:= $(CLASS))

SRCS		= $(FILES:=.cpp)
OBJS		= $(addprefix $(OBJDIR)/, $(FILES:=.o))
HEADER		= $(CLASS:=.hpp)

# Rules
all: $(NAME)

$(NAME): $(SRCS) $(HEADER) $(OBJS)
	@printf "$(ORANGE)Compiling $(NAME)\033[0m"
	@ $(CC) $(OBJS) -o $(NAME)
	@printf "\r\033[K"
	@printf "$(GREEN)$(NAME) compiled$(RESET)"

$(OBJDIR)/%.o: %.cpp $(HEADER)
	@mkdir -p $(dir $@)
	@printf "$(ORANGE)Compiling $@...\033[0m"
	@$(CC) $(FLAGS) -c $< -o $@
	@printf "\r\033[K"
	@printf "\033[0;32m$(GREEN)$@ compiled!$(RESET)"

clean:
	@printf "$(ORANGE)Cleaning up...\033[0m"
	@$(RM) $(OBJDIR) $(OBJS)
	@printf "\033[0m\r"
	@printf "$(GREEN)Clean up successful$(RESET)"

s_clean:
	@$(RM) $(NAME) $(OBJDIR) $(OBJS)

fclean: s_clean
	@printf "$(ORANGE)Full clean up...\033[0m"
	@$(RM) $(NAME)
	@printf "\r\033[K"
	@printf "$(GREEN)Full clean up successful$(RESET)"

re: fclean all

help:
	@echo "\033[0;36mmake\033[0m : complies the project."
	@echo "\033[0;36mmake all\033[0m : complies the project."
	@echo "\033[0;36mmake re\033[0m : recompiles the project."
	@echo "\033[0;36mmake clean\033[0m : removes the object files."
	@echo "\033[0;36mmake fclean\033[0m : removes all files generated by this Makefile."

.PHONY: all clean fclean re help
